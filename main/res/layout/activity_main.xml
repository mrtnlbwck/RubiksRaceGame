<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CFFDDDD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/kolorowy" />

        <Button
            android:id="@+id/button_play_game"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp"
            android:foreground="@drawable/graj"
            android:text="graj"/>

        <Button
            android:id="@+id/button_results_game"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:foreground="@drawable/wyniki"
            android:text="wyniki"/>

        <Button
            android:id="@+id/button_rules_game"
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:foreground="@drawable/zasady"
            android:text="zasady" />

    </LinearLayout>


</FrameLayout>